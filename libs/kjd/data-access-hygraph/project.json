{
  "name": "kjd-data-access-hygraph",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/kjd/data-access-hygraph/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/kjd/data-access-hygraph",
        "main": "libs/kjd/data-access-hygraph/src/index.ts",
        "tsConfig": "libs/kjd/data-access-hygraph/tsconfig.lib.json",
        "assets": ["libs/kjd/data-access-hygraph/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/kjd/data-access-hygraph/**/*.ts",
          "libs/kjd/data-access-hygraph/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/kjd/data-access-hygraph/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "codegen": {
      "executor": "nx:run-commands",
      "options": {
        "command": "graphql-codegen -c codegen.ts",
        "cwd": "{projectRoot}/src"
      }
    }
  },
  "tags": ["scope:kjd"]
}
